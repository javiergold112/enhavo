{% extends 'EnhavoShopBundle:Theme/Checkout:payment.html.twig' %}

{% block main %}
    {% form_theme form _self %}
    <h1>Payment</h1>
    <div>
        <form action="{{ path('enhavo_shop_theme_checkout_payment') }}" method="POST" data-checkout-form>
            {{ form_errors(form) }}
            {{ form_widget(form.payment) }}
            {{ form_row(form._token) }}
            <button type="submit">Senden</button>
        </form>
    </div>
{% endblock %}

{% block enhavo_shop_payment_widget %}
    {% trans_default_domain 'EnhavoShopBundle' %}
    {% for key, checkbox in form.method.children %}
        <div class="payment-choice-{{ checkbox.vars.label }}">
            <div>Image Placeholder</div>
            <label>{{ ('checkout.payment.form.label.' ~ checkbox.vars.label)|trans }}</label>
            {{ form_widget(checkbox) }}
        </div>
    {% endfor %}
{% endblock %}

