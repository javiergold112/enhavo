{% extends template('base') %}


{% block javascripts %}
    {{ parent() }}

    {% for javascript in javascripts %}
        <script type="text/javascript" src="{{ asset(admin_asset(javascript)) }}"></script>
    {% endfor %}

    {% if requireJsApp %}
        <script type="text/javascript">
            require(['{{ requireJsApp }}'], function(app) {});
        </script>
    {% endif %}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {% for stylesheet in stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset(admin_asset(stylesheet)) }}">
    {% endfor %}
{% endblock %}

