<img src="/bundles/enhavoapp/img/enhavo_admin_logo.svg" alt="Enhavo CMS Logo" class="menu-logo"/>
<ul id="menu-main">
    <button data-action data-action-type="overlay" data-action-route="enhavo_user_user_password" class="btn passwordChange">Passwort</button>
{% for menu in menus %}
    {% set translationDomain = null %}
    {% for item in menu.labelAttributes %}
        {% set translationDomain = item %}
    {% endfor %}
    {% trans_default_domain translationDomain %}
    {% if menu.isDisplayed %}
        <li class="{% if menu.isCurrent() %}selected{% endif %}">
            <a href="{{ menu.uri }}" class="{{ menu.attribute('class') }}">
              <span>{{ menu.label|trans() }}</span>
            </a>
        </li>
    {% endif %}
{% endfor %}
    <p class="desc">
        enhavo is an open source <br/>
        content-management-system <br/>
        based on symfony 2 and sylius. <br/>
        <br/>
        Created by <a href="http://xq-web.de" target="_blank">xq-web.de</a>
    </p>
</ul>