{% extends 'EnhavoAppBundle:Button:default.html.twig' %}

{% block button_attributes %}
    {% if route %}
        data-route="{{ route }}"
    {% endif %}
    {% if routeParameters %}
        data-route-parameters="{{ routeParameters|json_encode }}"
    {% endif %}
    {% if id %}
        data-id="{{ id }}"
    {% endif %}
    {% if id %}
        data-close="{{ close|json_encode }}"
    {% endif %}
{% endblock %}