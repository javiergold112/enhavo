{% extends 'form_div_layout.html.twig' %}

{% block datetime_widget -%}
    <div class="input-container">
        <input class="datetimepicker" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %} type="text" />
    </div>
{%- endblock %}

{% block date_widget -%}
    <div class="input-container">
        <input class="datepicker" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %} type="text" />
    </div>
{%- endblock %}

{% block choice_widget_expanded %}
    <div class="choice-input-container" {{ block('widget_container_attributes') }}>
        {%- for child in form %}
        <span class="choice-input-with-label">
            {{- form_widget(child) -}}
            {{- form_label(child) -}}
        </span>
        {% endfor -%}
    </div>
{% endblock %}

{% block form_row %}
    {% spaceless %}
        <div class="row mb1">
            <label class="col-md-2 text-right label-container">{{ form_label(form) }}</label>
            <div class="col-md-9 formwidget-container">{{ form_widget(form) }}</div>
        </div>
    {% endspaceless %}
{% endblock %}

{% block text_widget %}
    <div class="input-container">
        <input {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %} type="text" />
    </div>
{% endblock %}

{% block text_integer %}
   <input {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %} type="text" />
{% endblock %}

{% block textarea_widget %}
  <div class="input-container">
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
  </div>
{% endblock %}

{% block password_widget %}
    <div class="input-container">
        <input {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %} type="password" />
    </div>
{% endblock %}

{% block wysiwyg_widget %}
    <div class="wysiwyg-container">
        <textarea data-wysiwyg data-config="{{ config|e }}" {{ block('widget_attributes') }}>{{ value }}</textarea>
    </div>
{% endblock %}

{% block enhavo_route_widget %}
    {{ form_widget(form.staticPrefix) }}
{% endblock %}

{% block enhavo_list_widget %}
    {% import _self as forms %}
    <ul id="list-fields"{% if sortable == true %}data-order="{{ sortable_property }}"{% endif %} data-prototype="{{ forms.input(sortable, border, allow_delete, block_name, name, form_widget(form.vars.prototype))|e }}" class="enhavo_list {% if border == true and sortable == true and allow_delete == true %}sbd{% elseif sortable == true and border == false and allow_delete == true %}sd{% elseif sortable == false and border == true and allow_delete == true%}bd{% elseif sortable == false and border == false and allow_delete == true %}d{% elseif sortable == false and border == true and allow_delete == false %}b{% elseif sortable == true and border == false and allow_delete == false %}s{% elseif sortable == true and border == true and allow_delete == false %}sb{% endif %}">
        {% for item in form.children %}
            {{ forms.input(sortable, border, allow_delete, block_name, name, form_widget(item))|raw }}
        {% endfor %}
    </ul>

    <div class="row mb1">
        <div class="col-md-9">
            <div class="button col-md-1 btnsmall add-another">
                <i class="fa fa-plus"></i>
            </div>
        </div>
    </div>
{% endblock %}

{% macro input(sortable, border, allow_delete, block_name, name, form_widget) %}
    <li class="row listElement">
        {% if sortable == true and border == true and allow_delete == true %}
            <div class="button-container mb1">
                <div class="button button-up"><i class="fa fa-angle-up"></i></div>
                <div class="button button-down"><i class="fa fa-angle-down"></i></div>
                <div class="label">{% if block_name %}{{ block_name }}{% else %}{{ name }}{% endif %}</div>
            </div>
        {% endif %}

        <div {% if sortable == true and border == false and allow_delete == true %} class="col-md-11" {% elseif sortable == true and allow_delete == false %} class="col-bd-12"{% endif %}>
            {{ form_widget|raw }}
        </div>
        {% if allow_delete == true %}
            <div class="button col-md-1 button-delete">
                <i class="fa fa-remove"></i>
            </div>
            {% if border == false and sortable == true %}
                <div class="button button-up"><i class="fa fa-angle-up"></i></div>
                <div class="button button-down"><i class="fa fa-angle-down"></i></div>
            {% endif %}
        {% endif %}
        {% if sortable == true and border == true and allow_delete == false %}
            <div class="button button-up"><i class="fa fa-angle-up"></i></div>
            <div class="button button-down"><i class="fa fa-angle-down"></i></div>
        {% endif %}
    </li>
{% endmacro %}

