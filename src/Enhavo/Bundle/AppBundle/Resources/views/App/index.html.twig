{% extends template('base') %}

{% trans_default_domain "EnhavoAppBundle" %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        require(['app/Index'], function(index) {});
    </script>
{% endblock %}

{% block content %}
    {% if viewer.title|trans({}, viewer.translationDomain) %}
        <h1 class="cat">{{ viewer.title|trans({}, viewer.translationDomain)|nl2br }}</h1>
    {% endif %}

    {% block topButtons %}
        <div class="row action-row" data-action-row>
            <div class="col-sm-12">
                {% for action in actions %}
                    {{ action_render(action.type, action) }}
                {% endfor %}
            </div>
        </div>
    {% endblock %}

    {% for block in blocks %}
        {{ block_render(block.type, block) }}
    {% endfor %}
{% endblock %}
