<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <title>{% block title %}enhavo CMS{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400,600,700"  type="text/css">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoassets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoassets/css/font-awesome.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoassets/css/enhavo_iconfont.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoassets/css/jquery_ui/jquery-ui.css') }}" >
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoassets/icheck/icheck-esperanto.css') }}" >
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoassets/select2/select2.css') }}">

    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoapp/css/base.css') }}" >
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoapp/css/theme.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoapp/css/form.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavogrid/css/style.css') }}">

    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavopage/css/style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoarticle/css/style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavoslider/css/style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavouser/css/style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/enhavomedia/css/style.css') }}">

    {% if view is defined %}
        {% for stylesheet in view.getParameter('stylesheets') %}
            <link rel="stylesheet" href="{{ admin_asset(stylesheet) }}" />
        {% endfor %}
    {% endif %}

    {% block stylesheets %}{% endblock %}

    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/js/jquery/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/js/jquery-ui/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/js/jquery-plugin/jquery.timepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/js/fileupload/vendor/jquery.ui.widget.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/js/fileupload/jquery.iframe-transport.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/js/fileupload/jquery.fileupload.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/icheck/icheck.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/tinymce/jquery.tinymce.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/tinymce/tinymce.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoassets/select2/select2.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
    <script type="text/javascript" src="{{ path('bazinga_jstranslation_js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/enhavoapp/js/classes/Form.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoapp/js/classes/Admin.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoapp/js/classes/Templating.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoapp/js/plugin.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoapp/js/bootstrap.js') }}"></script>


    <script type="text/javascript" src="{{ asset('bundles/enhavomedia/js/UploadForm.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavogrid/js/ContentForm.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavocategory/js/CategoryForm.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/enhavoslider/js/SliderForm.js') }}"></script>


    {% if view is defined %}
        {% for javascript in view.getParameter('javascripts') %}
            <script type="text/javascript" src="{{ admin_asset(javascript) }}"></script>
        {% endfor %}
    {% endif %}

    {% block javascripts %}{% endblock %}
</head>
<body>
{% block body %}
    <div id="overlay"></div>
    <div id="overlayContent"></div>
    <div id="overlayMessage"></div>
    <div id="iframeContainer">
        <div class="close"><i class="fa fa-times"></i></div>
        <iframe src="" id="iframe" name="iframe"></iframe>
    </div>
    <div class="clearfix">
        <a class="responsive-menu-btn" data-mobile-menu></a>
        <div id="menu-main-container" data-menu-container>{{ admin_menu_render() }}</div>
        <div id="content-container" class="container" data-content-container>{% block content %}{% endblock %}</div>
    </div>
{% endblock %}
</body>
</html>