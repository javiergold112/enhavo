{% trans_default_domain translationDomain %}
<div data-test class="row head-row{% if viewer.hasBatchActions %} has-batch-actions{% endif %}">
    {% for column in columns %}
        <div class="col-xs-{{ column.width }}">{{ column.label|trans }}</div>
    {% endfor %}
</div>

{% if viewer.hasBatchActions %}<form data-batch-action-form action="#">{% endif %}

    <div class="row row-container{% if viewer.sortable %} sortable-droptarget{% endif %}">
        <div class="col-xs-{{ viewer.tableWidth }}"{% if viewer.sortable %} data-sortable-container data-move-after-route="{{ viewer.moveAfterRoute }}" data-move-to-page-route="{{ viewer.moveToPageRoute }}"{% endif %}>
            {% for item in data %}
                <div class="row entry-row{% if viewer.hasBatchActions %} has-batch-actions{% endif %}" data-id="{{ item.id }}"{% if viewer.sortable %} data-sortable-row{% endif %}>
                    {% if viewer.hasBatchActions %}<div class="batch-checkbox-wrapper"><input type="checkbox" name="batchActionTargets[]" value="{{ item.id }}" /></div>{% endif %}
                    {% for column in columns %}
                        <div class="col-xs-{{ column.width }} col-{{ column.property }}">
                            {% if column.widget is defined %}
                                {{ viewer.renderWidget(column.widget, column.property, item)|raw }}
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                {{ 'table.empty'|trans({},'EnhavoAppBundle') }}
            {% endfor %}
        </div>
    </div>
{% if viewer.hasBatchActions and data|length > 0 %}
    {{ batch_action_render(viewer) }}
</form>
{% endif %}

{{ pagination_render(data) }}
