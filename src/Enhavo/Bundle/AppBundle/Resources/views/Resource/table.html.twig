{% trans_default_domain translationDomain %}
<div data-test class="row head-row">
    {% for column in columns %}
        <div class="col-xs-{{ column.width }}">{{ column.label|trans }}</div>
    {% endfor %}
</div>

<div class="row row-container">
    <div class="col-xs-{{ viewer.tableWidth }}">
        {% for item in data %}
            <div class="row entry-row" data-id="{{ item.id }}">
                {% for column in columns %}
                    <div class="col-xs-{{ column.width }}">
                        {% if column.widget is defined %}
                            {{ viewer.renderWidget(column.widget, column.property, item)|raw }}
                        {% else %}
                            {{ viewer.getProperty(item, column.property) }}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {{ 'table.empty'|trans('EnhavoAppBundle') }}
        {% endfor %}
    </div>
</div>

{{ pagination_render(data) }}