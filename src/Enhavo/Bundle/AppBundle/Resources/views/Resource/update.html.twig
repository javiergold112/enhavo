{% extends template('dialog') %}

{% trans_default_domain "EnhavoAppBundle" %}
{% form_theme form with form_themes %}

{% block content %}
    <form method="POST" action="{{ path(form_action, form_action_parameters) }}" data-csrf-token="{{ csrf_token }}" {% if form_delete %}data-delete="{{ path(form_delete, form_delete_parameters) }}"{% endif %} data-id="{{ data.id }}">
        {% block form %}
            {% include form_template %}
        {% endblock %}
        {{ block('buttonRow') }}
    </form>
{% endblock %}

{% block buttons %}
    {% for button in buttons %}
        {{ button_render(button.type, button, data) }}
    {% endfor %}
{% endblock %}