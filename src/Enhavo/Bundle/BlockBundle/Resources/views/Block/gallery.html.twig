<article class="block">
    {% if block.title %}
       {{ block.title|headline('title') }}
    {% endif %}
    {% if block.text %}
        <p>{{ block.text|html_sanitize }}</p>
    {% endif %}
    <div class="block-gallery">
        <ul class="slider" data-slider>
            {% for file in block.files %}
                <li>
                    <img src="{{ media_url(file) }}" />
                </li>
            {% endfor %}
        </ul>
    </div>
</article>