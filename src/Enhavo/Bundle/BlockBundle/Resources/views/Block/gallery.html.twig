<div class="enhavo_block">

    <div class="container">
        {% if block.title %}
            <h2 class="title">{{ block.title|raw }}</h2>
        {% endif %}
        {% if block.text %}
        <p>{{ block.text|raw }}</p>
        {% endif %}
    </div>
    <div class="enhavo_block_gallery">
        <div class="slider">
            {% for file in block.files %}
                <div>
                    <img src="{{ media_url(file) }}" />
                </div>
            {% endfor %}
        </div>
    </div>
</div>