{% extends 'EnhavoAppBundle:Form:fields.html.twig' %}

{% block sylius_translations_widget %}
    {{ form_errors(form) }}
    <div class="tab-container">
        <ul class="nav nav-tabs">
            {% for translationsFields in form %}
                {% set locale = translationsFields.vars.name %}

                <li {% if app.request.locale == locale %}class="active"{% endif %}>
                    <a href="#" data-toggle="tab" data-target=".{{ translationsFields.vars.id }}_translation_fields-{{ locale }}">
                        {{ locale|capitalize }}
                        {% if translationsFields.vars.required %}*{% endif %}
                    </a>
                </li>
            {% endfor %}
        </ul>

        <div class="tab-content">
            {% for translationsFields in form %}
                {% set locale = translationsFields.vars.name %}

                <div class="{{ translationsFields.vars.id }}_translation_fields-{{ locale }} tab-pane {% if app.request.locale == locale %}active{% endif %} {% if not form.vars.valid %}error{% endif %}">
                    {{ form_errors(translationsFields) }}
                    {{ form_widget(translationsFields) }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block textarea_widget %}
    {% if translation %}
        <div class="translation">
            {% for locale, value in translations %}
                <div data-translation-switch="{{ locale }}">{{ locale }}</div>
            {% endfor %}
            <div class="translation-container">
                {% for locale, value in translations %}
                    <div class="input-container">
                        <textarea name="{{ full_name }}[{{ locale }}]">{{ value }}</textarea>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block text_widget %}
    {% if translation %}
        <div class="translation">
            {% for locale, value in translations %}
                <div data-translation-switch="{{ locale }}">{{ locale }}</div>
            {% endfor %}
            <div class="translation-container">
                {% for locale, value in translations %}
                    <div class="input-container" data-translation-locale="{{ locale }}">
                        <input type="text" name="{{ full_name }}[{{ locale }}]" value="{{ value }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block enhavo_wysiwyg_widget %}
    {% if translation %}
        <div class="translation">
            <div class="wysiwyg-container">
                <textarea data-wysiwyg data-config="{{ config|e }}"></textarea>
            </div>
            {% for locale, value in translations %}
                <input type="hidden" name="{{ full_name }}[{{ locale }}]" value="{{ value }}">
            {% endfor %}
        </div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}