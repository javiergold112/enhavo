<html lang="{{  app.request.locale }}">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
        <meta charset="utf-8" />
        <meta name="description" content="{% block meta_description %}{% endblock %}" />
        <meta name="og:url" content="{{ app.request.uri }}" />
        <meta name="og:title" content="{% block og_title %}{% endblock %}" />
        <meta name="og:description" content="{% block og_description %}{% endblock %}" />
        <meta name="og:image" content="{% block og_image %}{% endblock %}" />

        <title>{% block meta_title %}{% endblock %}</title>

        <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/ico">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/ico">
        <link rel="apple-touch-icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('favicon.ico') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('base', null, 'theme') }}
        {% endblock %}
    </head>
    <body class="{% block body_class %}{% endblock %}">
        {#Shop#}
        <div class="cart-sidebar">
            <div class="title">Cart</div>
        </div>

        <header>
            <div class="container">
                <nav class="main-menu">
                    <div class="menu-btn" data-show-menu>
                        <div>
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                    <a href="/" class="logo">ACME</a>
                    <ul data-menu-items>
                        <li class="active"><a href="">Home</a></li>
                        <li><a href="">Company</a></li>
                        <li><a href="">Blog</a></li>
                        <li><a href="">About</a></li>
                        <li><a href="">Contact</a></li>
                    </ul>
                </nav>
            </div>
        </header>

        <main>
            {#Shop#}
            <div class="container">

                {#Shop#}
                <div class="cart-list">
                    <h1>Cart</h1>
                    <ul class="cart-products">
                        {% for i in 0..4 %}
                        <li class="cart-product">
                            <div class="cart-product-image"></div>
                            <div class="cart-product-content">
                                <div class="product-vendor">Händler</div>
                                <div class="product-title">Produktname</div>
                                <div class="product-price">980,57 €</div>
                            </div>
                            <div class="cart-product-config">
                                <a href="" class="remove"></a>
                                <div class="product-amount">
                                    <div class="select" data-select-amount>
                                        <select>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                            <option data-more>+</option>
                                        </select>
                                        <input type="text" data-more-amount>
                                    </div>
                                </div>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="product-list">
                    {% for i in 0..4 %}
                    <div class="product-item">
                        <a href="">
                            <span class="product-image">
                                <img src="" alt="">
                            </span>
                            <span class="product-content">
                                <span class="product-vendor">Handels GmbH</span>
                                <span class="product-title">Testprodukt langer Name und Beschreibung</span>
                                <span class="product-teaser">Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et</span>
                            </span>
                        </a>
                        <div class="product-meta">
                            <div class="product-price">
                                <div class="price"><span class="default-price">950,27 €</span> <span class="reduced-price">600,50 €</span></div>
                                <div class="unit">(9,00 / Kg)</div>
                            </div>
                            <div class="product-in-stock not-in-stock">Lieferbar</div>
                        </div>
                        <div class="product-config">
                            <div class="product-amount">
                                <div class="select" data-select-amount>
                                    <select>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option data-more>+</option>
                                    </select>
                                    <input type="text" data-more-amount>
                                </div>
                            </div>
                            <a href="" class="btn add-to-cart">Add to cart</a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            {% block main %}{% endblock %}
        </main>
        <div class="container">
            <footer>
                <a class="logo">ACME</a>
                <div class="row">
                    <div class="col-md-3">
                        <div class="footer-title">Links</div>
                        <ul>
                            <li><a href="">Home</a></li>
                            <li><a href="">Shop</a></li>
                            <li><a href="">Company</a></li>
                            <li><a href="">Contact</a></li>
                            <li><a href="">Imprint</a></li>
                            <li><a href="">AGB</a></li>
                            <li><a href="">Privacy</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <div class="footer-title">About</div>
                        <p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat.</p>
                    </div>

                    <div class="col-md-3">
                        <div class="footer-title">Approach</div>
                        <p>
                            Hauptstraße 1a, <br>
                            82256 Fürstenfeldbruck
                        </p>
                    </div>
                    <div class="col-md-3">
                        <div class="footer-title">Socialmedia</div>
                        <ul>
                            <li><a href="">Follow us on Facebook</a></li>
                            <li><a href="">Follow us on Twitter</a></li>
                        </ul>
                    </div>
                </div>
            </footer>
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('base', null, 'theme') }}
        {% endblock %}
    </body>
</html>