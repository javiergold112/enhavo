<div class="enhavo_content">
    <div class="row enhavo_content_picturepicture">
        {% if data.title %}
            <h2>{{ data.title|raw }}</h2>
        {% endif %}
        <div class="col-xs-6 left6">
            {% for file in data.filesLeft %}
                {% if loop.first %}
                    <img class="enhavo_content_img {% if data.frame %}enhavo_content_frame{% endif %}" src="{{ media_url(file,960) }}">
                    {% if data.captionLeft %}
                        <p class="picture_caption">{{ data.captionLeft }}</p>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
        <div class="col-xs-6 right6">
            {% for file in data.filesRight %}
                {% if loop.first %}
                    <img class="enhavo_content_img {% if data.frame %}enhavo_content_frame{% endif %}" src="{{ media_url(file,960) }}">
                    {% if data.captionRight %}
                        <p class="picture_caption">{{ data.captionRight }}</p>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div