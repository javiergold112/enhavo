<div class="order-order">
    {{ form_row(form.state) }}
    {{ form_row(form.paymentState) }}
    {{ form_row(form.shippingState) }}
    <hr />
    <div class="row">
        <div class="col-sm-7">
            {% if data.items|length %}
                <div class="itemlist-head">
                    <div class="row">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-6">Produkt</div>
                        <div class="col-xs-2">Preis/Stk.</div>
                        <div class="col-xs-2">Preis</div>
                    </div>
                </div>
                <ul class="itemlist">
                {% for item in data.items %}
                    <li>
                        <div class="row">
                            <div class="col-xs-2">
                                {% if item.product and item.product.picture %}
                                    <div class="img">
                                        <img src="{{ media_url(item.product.picture, 100, 100) }}" />
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-xs-6">
                                <div class="item-title">
                                    {% if item.product %}
                                        {{ item.product.title }}
                                    {% else %}
                                        Product deleted
                                    {% endif %}
                                    <span class="item-quantity">x{{ item.quantity }}</span>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <div class="item-unit-price">
                                    <div class="details">
                                        <div>Netto: {{ item.unitPrice|currency }}</div>
                                        <div>Steuern: {{ item.unitTax|currency }}</div>
                                    </div>
                                    <div>{{ item.unitTotal }}</div>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <div class="item-unit-price total">
                                    <div class="details">
                                        <div>Netto: {{ item.unitPriceTotal|currency }}</div>
                                        <div>Steuern: {{ item.taxTotal|currency }}</div>
                                    </div>
                                    <div>{{ item.total|currency }}</div>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
                </ul>
            {% endif %}
            <div class="row">
                <div class="col-xs-8">
                </div>
                <div class="col-xs-4">
                    <div class="order-sum">
                        <div>Nettobetrag: {{ data.unitTotal|currency }}</div>
                        <div>
                            {% if data.shippingTotal > 0 %}
                                Versand: {{ data.shippingTotal|currency }}
                            {% else %}
                                Kostenloser Versand
                            {% endif %}
                        </div>
                        {% if data.discountTotal > 0 %}
                            <div>Ermäßigung: {{ data.discountTotal|currency }}</div>
                        {% endif %}
                        <div>
                            MwSt.: {{ data.taxTotal|currency }}
                        </div>
                        <div class="total">Summe: {{ data.total|currency }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div><strong>Rechnungsnummer:</strong> {{ data.number }}</div>
            <div><strong>Bestelldatum:</strong> {{ data.orderedAt|date }}</div>
            <div><strong>E-Mail:</strong> {{ data.customerEmail }}</div>
            <div><strong>Bezahlart:</strong> {{ data.payment.method.code }}</div>

            <div class="address">
                <div><strong>Liefer{% if not data.differentBillingAddress %}- und Rechnungs{% endif %}anschrift</strong></div>
                <div>{{ data.shippingAddress.firstName }} {{ data.shippingAddress.lastName }}</div>
                {% if data.shippingAddress.company %}
                    <div>{{ data.shippingAddress.company }}</div>
                {% endif %}
                <div>{{ data.shippingAddress.street }}</div>
                <div>{{ data.shippingAddress.postCode }} {{ data.shippingAddress.city }}</div>
                <div>Land: {{ data.shippingAddress.countryCode|country }}</div>
                {% if data.shippingAddress.phoneNumber %}
                    <div>Telefon: {{ data.shippingAddress.phoneNumber }}</div>
                {% endif %}
                {% if data.differentBillingAddress %}
                    <div>Rechnungsanschrift</div>
                    <div>{{ data.billingAddress.firstName }} {{ data.billingAddress.lastName }}</div>
                    {% if data.billingAddress.company %}
                        <div>{{ data.billingAddress.company }}</div>
                    {% endif %}
                    <div>{{ data.billingAddress.street }}</div>
                    <div>{{ data.billingAddress.postCode }} {{ data.billingAddress.city }}</div>
                    <div>Land: {{ data.billingAddress.countryCode|country }}</div>
                    {% if data.billingAddress.phoneNumber %}
                        <div>Telefon: {{ data.shippingAddress.phoneNumber }}</div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
</div>