{% extends theme_template('base') %}

{% block javascripts %}
    <script src="{{ asset('/bundles/enhavoshop/js/Shop.js') }}" type="text/javascript"></script>
{% endblock %}

{% block main %}
    {% if status.failed or status.canceled %}
        <h1>Some error occured</h1>
        <div>
            We can't finish your order, please try again or contact our service.
        </div>
    {% else %}
        <h1>Thank you</h1>
        <div>
            Thank you for buying.
        </div>
    {% endif %}
{% endblock %}