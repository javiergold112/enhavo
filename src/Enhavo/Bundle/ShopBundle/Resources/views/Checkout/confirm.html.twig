{% extends baseTemplate %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/enhavoshop/js/Shop.js') }}"></script>
{% endblock %}

{% block main %}

    {% trans_default_domain 'EnhavoShopBundle' %}

    <h1>Confirm</h1>

    <div>
        <form action="{{ path('enhavo_promotion_reedem_coupon') }}" method="POST" data-coupon-form>
            {{ form_errors(couponForm) }}
            {{ form_row(couponForm.promotionCoupon) }}
            {{ form_row(couponForm._token) }}
            <button type="submit">{{ 'promotion.coupon.form.action.redeem'|trans }}</button>
        </form>
    </div>

    <div>
        {{ shop_cart_summary_render({template: summaryTemplate, immutable: true, cart: order}) }}
    </div>


    <div>
        <form action="{{ path('enhavo_checkout_confirm') }}" method="POST" data-checkout-form>
            {{ form_errors(form) }}
            {{ form_row(form._token) }}
            <button type="submit">Confirm</button>
        </form>
    </div>
{% endblock %}