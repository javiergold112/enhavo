{% extends baseTemplate %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/enhavoshop/js/Shop.js') }}"></script>
{% endblock %}

{% block main %}
    <h1>Addressing</h1>
    <div>
        <form action="{{ path('enhavo_checkout_addressing') }}" method="POST" data-checkout-form novalidate>
            {{ form_errors(form) }}
            {% if form.email %}
                {{ form_row(form.email) }}
            {% endif %}
            {{ form_widget(form.shippingAddress) }}
            {{ form_row(form.differentBillingAddress) }}
            <div {% if not order.differentBillingAddress %}style="display: none"{% endif %} data-checkout-billing-address>
                {{ form_widget(form.billingAddress) }}
            </div>
            {{ form_row(form._token) }}
            <button type="submit">Senden</button>
        </form>
    </div>
{% endblock %}