{% for item in cart.items %}
    <div>
        <form action="{{ path('sylius_cart_save_quantity', {id: item.id}) }}" method="POST" data-form-cart-quantity>
            <h2>{{ item.product.title }}</h2>

            <div><input type="text" name="quantity" value="{{ item.quantity }}" /></div><button type="submit">Save</button>

            <div>Unit Price: <span data-cart-item-unit-price>{{ item.product.price }}</span></div>
            <div>Unit Tax: <span data-cart-item-unit-tax>{{ item.product.tax }}</span></div>
            <div>Unit Total: <span data-cart-item-unit-total>{{ item.product.unitPriceTotal }}</span></div>

            <div>Tax Total: <span data-cart-item-tax-total>{{ item.taxTotal }}</span></div>
            <div>Net Total: <span data-cart-item-net-total>{{ item.unitPriceTotal }}</span></div>
            <div>Total: <span data-cart-item-total>{{ item.total }}</span></div>

            <a data-cart-item-remove href="{{ path('sylius_cart_item_remove', {id: item.id}) }}">Delete</a>
        </form>
    </div>
{% endfor %}
<hr />
<div>
