                                <span class="default-price">950,27 €</span>
                                <span class="reduced-price">600,50 €</span>
                            </div>
                            <div class="price-info">
                                <div class="price-includes">Incl. VAT plus Shipping Costs</div>
                                <div class="unit">(9,00 / Kg)</div>
                            </div>
                        </div>
                    </div>
                    <div class="label">Configurate your product</div>
                    <div class="product-variants">
                        <div class="select">
                            <select>
                                <option disabled selected>Color</option>
                                <option>Black</option>
                                <option>White</option>
                            </select>
                        </div>
                        <div class="select">
                            <select>
                                <option disabled selected>Size</option>
                                <option>M</option>
                                <option>L</option>
                            </select>
                        </div>
                    </div>

                    <div class="product-footer">
                        <div class="product-amount">
                            <div class="select" data-select-amount="">
                                <select>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option data-more="">+</option>
                                </select>
                                <input type="text" data-more-amount="">
                            </div>
                        </div>
                        <a href="" class="btn">Add to Cart</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}