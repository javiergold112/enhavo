{% extends template('theme/base-user.html.twig') %}

{% block main %}
    <div class="container">
        <div class="user-content">
            <div class="summary">
                <div class="user-date">21.05.2019</div>
                <div class="user-title">Name of the order</div>
                <div class="summary-boxes">
                    <div class="address summary-box">
                        <div class="title">Address</div>
                        <ul>
                            <li>Nicolas Pakai</li>
                            <li>Sandstraße 41</li>
                            <li>80335 München</li>
                            <li>Deutschland</li>
                        </ul>
                    </div>
                    <div class="shipping summary-box">
                        <div class="title">Shipping Method</div>
                        <ul>
                            <li>Standard (3-6 Days)</li>
                        </ul>
                    </div>
                    <div class="payment summary-box">
                        <div class="title">Payment Method</div>
                        <ul>
                            <li>Paypal</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="cart-list">
                <ul class="cart-products">
                    {% for i in 0..4 %}
                        <li class="cart-product">
                            <div class="cart-product-image"></div>
                            <div class="cart-product-content">
                                <div class="product-vendor">Händler</div>
                                <a class="product-title">Produktname</a>
                                <div class="product-detail">Produktdetail (2 kg)</div>
                            </div>
                            <div class="cart-product-config">
                                <div class="product-amount">
                                    <div class="select" data-select-amount>
                                        <select>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                            <option data-more>+</option>
                                        </select>
                                        <input type="text" data-more-amount>
                                    </div>
                                </div>
                            </div>
                            <div class="product-price">
                                980,57 € <br>
                                <a>Add to cart</a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
                <div class="cart-footer">
                    <div class="cart-config">
                    </div>
                    <div class="cart-summary">
                        <div class="sum">
                            <div class="pair">
                                <div class="key">Total Sum</div>
                                <div class="value">129,30 €</div>
                            </div>
                        </div>
                        <div class="additional-information">
                            <p>ergibt sich aus:</p>
                            <div class="pair">
                                <div class="key">Bestellwert:</div>
                                <div class="value">29,50 €</div>
                            </div>
                            <div class="pair">
                                <div class="key">Versandkosten:</div>
                                <div class="value">5,00 €</div>
                            </div>
                            <div class="pair">
                                <div class="key">zzgl. MwSt.:</div>
                                <div class="value">5,66 €</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cart-action">
                    <a href="" class="btn back">Back to orders</a>
                    <a href="" class="btn">Go to payment</a>
                    <a href="" class="btn">Cancel order</a>
                    <a href="" class="btn">Place order again</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}