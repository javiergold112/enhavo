{% extends template('theme/base-user.html.twig') %}

{% block main %}
    <section class="container">
        <div class="user-content indented">
            <h1>Hi there,</h1>
            <p>This is the area, where you can change <br>your addressing information</p>
            <form action="" class="checkout-form">
                <div class="user-title">Addressing</div>
                <fieldset>
                    <div class="select">
                        <select name="" id="">
                            <option value="">Mr.</option>
                            <option value="">Mrs.</option>
                        </select>
                    </div>
                    <input type="text" placeholder="Prename">
                    <input type="text" placeholder="Name">
                </fieldset>
                <fieldset>
                    <input type="text" placeholder="Street">
                    <input type="text" placeholder="Number">
                    <input type="text" placeholder="PLZ">
                    <input type="text" placeholder="City">
                    <input type="text" placeholder="Country">
                    <input type="text" placeholder="Company">
                </fieldset>
                <fieldset>
                    <input type="email" placeholder="E-Mail">
                    <input type="text" placeholder="Phone">
                </fieldset>
                <div class="diff-bill-address" data-diff-billaddress>
                    <div class="checkbox">
                        <label>I have a different billing address</label>
                        <input type="checkbox" data-billaddress-checkbox>
                        <span></span>
                    </div>
                    <fieldset>
                        <div class="select">
                            <select name="" id="">
                                <option value="">Mr.</option>
                                <option value="">Mrs.</option>
                            </select>
                        </div>
                        <input type="text" placeholder="prename">
                        <input type="text" placeholder="name">
                    </fieldset>
                    <fieldset>
                        <input type="text" placeholder="Street">
                        <input type="text" placeholder="Number">
                        <input type="text" placeholder="PLZ">
                        <input type="text" placeholder="City">
                        <input type="text" placeholder="Country">
                        <input type="text" placeholder="Company">
                    </fieldset>
                </div>
                <input type="submit" class="btn" value="Save">
            </form>
        </div>
    </section>
{% endblock %}