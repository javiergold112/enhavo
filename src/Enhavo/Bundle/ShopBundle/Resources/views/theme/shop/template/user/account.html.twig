{% extends template('theme/base-user.html.twig') %}

{% block main %}
    <section class="container">
        <div class="user-content indented">
            <h1>Account settings</h1>
            <form action="" class="checkout-form">
                <div class="user-title">Reset password</div>
                <input type="password" placeholder="Old password">
                <input type="password" placeholder="New password">
                <input type="submit" class="btn" value="Reset password">
            </form>
            <div class="delete-account">
                <div class="user-title">Delete account</div>
                <p>Note that your account is not reversible. <br>Your data will not be stored and deleted completely.</p>
                <a href="" class="btn">Delete account</a>
            </div>
        </div>
    </section>
{% endblock %}