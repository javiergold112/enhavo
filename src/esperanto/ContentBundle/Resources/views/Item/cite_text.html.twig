<div class="row content">
    <div class="content_citetext">
        {% if data.textLeft == 0 %}
        <div class="col-xs-3 left3">
            <div class="wave">
                <img src="{{ asset('bundles/esperantoproject/img/wave_line.png')}}">
            </div>
            <div class="content_cite">
                {% if data.cite %}
                    {{ data.cite|raw }}
                {% endif %}
            </div>
            <div class="wave">
                <img src="{{ asset('bundles/esperantoproject/img/wave_line.png')}}">
            </div>
        </div>
        <div class="col-xs-9 right9">
            <div class="content_text">
                {% if data.title %}
                    <h2>{{ data.title }}</h2>
                {% endif %}
                {% if data.text %}
                    {{ data.text|raw }}
                {% endif %}
            </div>
        </div>
        {% else %}
            <div class="col-xs-9 left9">
                <div class="content_text">
                    {% if data.title %}
                        <h2>{{ data.title }}</h2>
                    {% endif %}
                    {% if data.text %}
                        {{ data.text|raw }}
                    {% endif %}
                </div>
            </div>
            <div class="col-xs-3 right3">
                <div class="wave">
                    <img src="{{ asset('bundles/esperantoproject/img/wave_line.png')}}">
                </div>
                <div class="content_cite">
                    {% if data.cite %}
                        {{ data.cite|raw }}
                    {% endif %}
                </div>
                <div class="wave">
                    <img src="{{ asset('bundles/esperantoproject/img/wave_line.png')}}">
                </div>
            </div>
        {% endif %}
    </div>
</div>