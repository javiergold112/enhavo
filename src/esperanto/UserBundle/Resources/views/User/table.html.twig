<div class="row p1 head-row">
    <div class="col-md-1">{{ 'label.id'|trans }}</div>
    <div class="col-md-3">{{ 'label.username'|trans }}</div>
    <div class="col-md-4">{{ 'label.groups'|trans }}</div>
    <div class="col-md-4">{{ 'label.name'|trans }}</div>
</div>

<div class="row row-container">
    <div class="col-md-12">
        {% for item in data %}
            <div class="col-md-12 mb1 entry-row p1" data-id="{{ item.id }}">
                <div class="col-md-1">{{ item.id }}</div>
                <div class="col-md-3">{{ item.username }}</div>
                <div class="col-md-4">
                    {% for group in item.groups %}
                        {{ group.name }}{% if not loop.last %},{% endif %}
                    {% endfor %}
                </div>
                <div class="col-md-4">{% if item.firstName %}{{ item.firstName }} {% endif %}{{ item.lastName }}</div>
            </div>
        {% else %}
            {{ 'table.empty'|trans }}
        {% endfor %}
    </div>
</div>
