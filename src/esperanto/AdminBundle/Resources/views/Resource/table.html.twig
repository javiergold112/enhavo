<div class="row p1 head-row">
    {% for column in columns %}
        <div class="col-md-{{ column.width }}">{{ column.label|trans }}</div>
    {% endfor %}
</div>

<div class="row row-container">
    <div class="col-md-{{ viewer.tableWidth }}">
        {% for item in data %}
            <div class="col-md-{{ viewer.tableWidth }} mb1 entry-row p1" data-id="{{ item.id }}">
                {% for column in columns %}
                    <div class="col-md-{{ column.width }}">
                        {% if column.widget is defined %}
                            {{ viewer.renderWidget(column.widget, column.property, item)|raw }}
                        {% else %}
                            {{ viewer.getProperty(item, column.property) }}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {{ 'table.empty'|trans }}
        {% endfor %}
    </div>
</div>

{{ pagination_render(data) }}