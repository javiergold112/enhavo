<div class="row content">
    <div class="content_texttext">
        <div class="col-xs-6 left6">
            <div class="content_text">
                {% if data.titleLeft %}
                    <h2>{{ data.titleLeft }}</h2>
                {% endif %}
                {% if data.textLeft %}
                    {{ data.textLeft|raw }}
                {% endif %}
            </div>
        </div>
        <div class="col-xs-6 right6">
            <div class="content_text">
                {% if data.titleRight %}
                    <h2>{{ data.titleRight }}</h2>
                {% endif %}
                {% if data.textRight %}
                    {{ data.textRight|raw }}
                {% endif %}
            </div>
        </div>
    </div>
</div>